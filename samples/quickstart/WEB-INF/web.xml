<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <!-- By default, JSecurity's Session infrastructure in a web environment will use the Servlet container's
         HttpSession.  But if you need to share session state across client mediums (e.g. web mvc and Swing),
         or are doing distributed/shared Sessions for Single Sign On, HttpSessions aren't good enough.  
         You'll need to use JSecurity's more powerful (and client-agnostic) session management.  You can do this
         by uncommenting the following:
    <context-param>
        <param-name>sessionMode</param-name>
        <param-value>jsecurity</param-value>
    </context-param> -->

    <filter>
        <filter-name>JSecurityFilter</filter-name>
        <filter-class>org.jsecurity.web.servlet.JSecurityFilter</filter-class>
        <init-param>
            <param-name>unauthorizedPage</param-name>
            <param-value>/s/unauthorized</param-value>
        </init-param>
        <init-param>
            <param-name>interceptors</param-name>
            <param-value>
                authc = org.jsecurity.web.authz.BasicHttpAuthenticationWebInterceptor
                authc.applicationName = JSecurity Quickstart
            </param-value>
        </init-param>
        <init-param>
            <param-name>urls</param-name>
            <param-value>
                /account/** = authc
                /s/jsecurity.jnlp=authc|user
                /remoting/**=authenticated|permission.remote:invoke
            </param-value>
        </init-param>

    </filter>


    <filter-mapping>
        <filter-name>JSecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ===================================================================
	 -  Welcome file list
	 -  =================================================================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
