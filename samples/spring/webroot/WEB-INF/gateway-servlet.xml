<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for "gateway" DispatcherServlet.
  -->

<beans>
    <!-- =========================================================
      -  Spring MVC configuration
      ============================================================ -->
	<bean id="authenticatedUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="login">loginController</prop>
                <prop key="logout">logoutController</prop>
            </props>
        </property>
    </bean>


    <!-- =========================================================
      -  JSecurity configuration
      ============================================================ -->
    <bean name="authenticator" class="org.jsecurity.ri.authc.module.ModularAuthenticator">
        <property name="modules">
            <list>
                <ref bean="daoAuthenticationModule"/>
            </list>
        </property>
    </bean>

    <bean id="daoAuthenticationModule" class="org.jsecurity.ri.authc.module.dao.DAOAuthenticationModule">
        <property name="authenticationDao" ref="inMemoryAuthenticationDao"/>
        <property name="credentialMatcher">
            <bean class="org.jsecurity.ri.authc.credential.ShaCredentialMatcher">
                <property name="base64Encoded" value="true"/>
            </bean>
        </property>
    </bean>

    <bean id="inMemoryAuthenticationDao" class="org.jsecurity.ri.authc.module.dao.MemoryAuthenticationDAO">
        <property name="accounts">
            <set>
                <bean class="org.jsecurity.ri.authc.module.dao.AccountEntry">
                    <property name="username" value="user1"/>
                    <property name="password" value="s9qne0wEqVUbh4HQMZH+CY8yXmc="/> <!-- 'user1' SHA-1 Base64 -->
                    <property name="roles" value="role1, role2"/>
                </bean>
                <bean class="org.jsecurity.ri.authc.module.dao.AccountEntry">
                    <property name="username" value="user2"/>
                    <property name="password" value="oYgcBu7JbbmQHHu/5BxCo/COnLQ="/> <!-- 'user2' SHA-1 Base64 -->
                    <property name="roles" value="role2"/>
                </bean>
            </set>
        </property>
    </bean>


    <!-- =========================================================
      -  Spring controllers
      ============================================================ -->
    <bean name="loginController" class="org.jsecurity.samples.spring.LoginController">
        <property name="commandClass" value="org.jsecurity.samples.spring.LoginCommand"/>
        <property name="formView" value="login"/>
        <property name="successView" value="redirect:/secure/index"/>

        <property name="authenticator" ref="authenticator"/>
    </bean>

    <bean name="logoutController" class="org.jsecurity.samples.spring.LogoutController"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.InternalResourceView"/>
		<property name="prefix" value="/WEB-INF/resources/"/>
		<property name="suffix" value=".jsp"/>
	</bean>


</beans>
