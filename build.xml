    <target name="src.zip" description="Create source ZIP (containing Java sources)">
        <mkdir dir="${dist.dir}"/>
        <delete file="${dist.dir}/${project.name}.src.zip"/>
        <zip destfile="${dist.dir}/${project.name}.src.zip">
            <fileset dir="${src.dir}">
                <include name="org/jsecurity/**"/>
            </fileset>
        </zip>
    </target>

