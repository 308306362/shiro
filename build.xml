    <target name="release" depends="jar,src.zip,javadoc">

        <!-- copy over the readme file in the dist directory so people understand
             what the files do: -->
        <!-- <copy toDir="${dist.dir}" preservelastmodified="true" file="${root.etc.dir}/README.txt"/> -->

        <property name="release.zip.name" value="${project.name}-${version}-with-dependencies.zip"/>
        <zip destfile="${dist.dir}/${release.zip.name}"
             basedir="${basedir}"
             excludes="**/.svn/*,**/build/**,**/${release.zip.name}"/>
    </target>

    <!-- ===================================================================
      -  all - everything
      -  =================================================================== -->
    <target name="all" depends="release"/>

</project>

