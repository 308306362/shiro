<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

    <info organisation="org.jsecurity" module="jsecurity" revision="0.9.0-alpha" status="milestone" publication="20080317015000">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0.html"/>
        <ivyauthor name="Les Hazlewood" url="http://www.leshazlewood.com"/>
    </info>

    <configurations>
        <conf name="runtime" description="Required dependencies when running JSecurity on 1.5 and later VMs"/>
        <conf name="runtime-1.3+" extends="runtime" description="Required dependencies when running JSecurity on 1.3+ VMs"/>
        <conf name="runtime-web" extends="runtime" description="Required dependencies when running JSecurity in web applications."/>
        <conf name="runtime-web-1.3+" extends="runtime-1.3+, runtime-web"/>

        <conf name="build" extends="runtime-1.3+" visibility="private" description="Dependencies for building JSecurity from scratch"/>
        <conf name="build-web" extends="build, runtime-web-1.3+"/>
        <conf name="samples-run" extends="build-web" visibility="private" description="Dependencies for testing the samples at runtime."/>
        <conf name="test" extends="samples-run" visibility="private" description="Dependencies for building the test suite."/>
    </configurations>

    <dependencies>

        <dependency org="commons-logging" name="commons-logging" rev="1.1.1" transitive="false" conf="runtime->default"/>
        <dependency org="net.sourceforge.retroweaver" name="retroweaver-rt" rev="2.0.5" conf="runtime-1.3+->default"/>

        <dependency org="net.sf.ehcache" name="ehcache" rev="1.4.1" transitive="false" conf="build->default"/>
        <dependency org="quartz" name="quartz" rev="1.5.2" transitive="false" conf="build->default"/>
        <dependency org="org.springframework" name="spring" rev="2.5.1" transitive="false" conf="build->default"/>

        <dependency org="commons-beanutils" name="commons-beanutils" rev="1.7.0" transitive="false" conf="runtime-web->default; runtime-web-1.3+->default"/>        
        <dependency org="javax.servlet" name="servlet-api" rev="2.5" transitive="false" conf="build-web->default"/>
        <dependency org="javax.servlet.jsp" name="jsp-api" rev="2.1" transitive="false" conf="build-web->default"/>

        <!-- Samples/Runtime testing: -->
        <dependency org="log4j" name="log4j" rev="1.2.15" transitive="false" conf="samples-run->default"/>
        <dependency org="javax.servlet" name="jstl" rev="1.2" transitive="false" conf="samples-run->default"/>
        <dependency org="taglibs" name="standard" rev="1.1.2" transitive="false" conf="samples-run->default"/>
        <dependency org="hsqldb" name="hsqldb" rev="1.8.0.7" transitive="false" conf="samples-run->default"/>

        <!-- Testing -->
        <dependency org="org.easymock" name="easymock" rev="2.3" transitive="false" conf="test->default"/>
        <dependency org="org.easymock" name="easymockclassextension" rev="2.3" transitive="false" conf="test->default"/>
        <dependency org="junit" name="junit" rev="4.4" transitive="false" conf="test->default"/>

        <!-- Not in maven repository: jboss-aop.jar, jug.jar, jug-native.zip -->


    </dependencies>



</ivy-module>